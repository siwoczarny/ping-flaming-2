{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "env": {
        "jest": true
    },
    "parser": "babel-eslint",
    "globals": {
        "window": true,
        "document": true
    },
    "rules": {
        "import/prefer-default-export": 0,
        "react/jsx-filename-extension": [1, {
            "extensions": [".js"]
        }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./src"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}